<Window x:Class="M015.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:M015"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
	<StackPanel Margin="10">
		<Menu>
			<MenuItem Header="Datei">
				<MenuItem Header="Beenden" Click="MenuItem_Click"/>
			</MenuItem>
			<MenuItem Header="Neben"/>
		</Menu>
		<Button Height="30" Content="Ein Button" Click="Button_Click"/>
		<TextBlock Background="Aqua" Name="TB"/>
		<ComboBox Name="CB" SelectionChanged="CB_SelectionChanged"/>
		<ListBox Name="LB" SelectionMode="Extended"/>
		<CheckBox Content="Eine Checkbox" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked"/>
		<RadioButton GroupName="R1" Content="R1.1" Checked="RadioButton_Checked"/>
		<RadioButton GroupName="R1" Content="R1.2" Checked="RadioButton_Checked"/>
		<RadioButton GroupName="R1" Content="R1.3" Checked="RadioButton_Checked"/>
		<RadioButton GroupName="R2" Content="R2.1"/>
		<RadioButton GroupName="R2" Content="R2.2"/>
	</StackPanel>
</Window>
